<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="2dp">

        <RelativeLayout
            android:id="@+id/rel_card_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp">


            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txt_firstname_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="First Name :"/>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txt_firstname"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Name"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/txt_firstname_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txt_lastname_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last Name :"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_below="@+id/txt_firstname_label"/>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txt_lastname"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Name"
                android:layout_marginLeft="23dp"
                android:layout_toRightOf="@+id/txt_lastname_label"
                android:layout_below="@+id/txt_firstname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>



    </android.support.v7.widget.CardView>
</RelativeLayout>